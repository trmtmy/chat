<div class="text-center">
  <%= render 'searches/searche', range: @range, search: @search %>
</div>

<h1><%= @range %> search for "<%= @word %>"</h1>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th></th>
          <th>name</th>
          <th>introduction</th>
        </tr>
          <td><%= image_tag user.get_profile_image(50,50) %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
          <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
      <% end %>
    </tbody>
  <% end %>
</table>